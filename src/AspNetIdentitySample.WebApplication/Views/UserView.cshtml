@model AspNetIdentitySample.WebApplication.ViewModels.UserViewModel

<form class="app-user app-form" method="post">

  <div class="app-form__group app-control">
    <span class="app-control__field">@Model.Email</span>
    <label class="app-control__label" asp-for="Email">Email</label>
  </div>

  <div class="app-form__group app-control">
    <input class="app-control__field" asp-for="Email" type="text" placeholder="Email" />
    <label class="app-control__label" asp-for="Email">Email</label>
    <span class="app-control__error" asp-validation-for="Email"></span>
  </div>

  <div class="app-form__group app-control">
    <input class="app-control__field" asp-for="FirstName" type="text" placeholder="First Name" />
    <label class="app-control__label" asp-for="FirstName">First Name</label>
    <span class="app-control__error" asp-validation-for="FirstName"></span>
  </div>

  <div class="app-form__group app-control">
    <input class="app-control__field" asp-for="LastName" type="text" placeholder="Last Name" />
    <label class="app-control__label" asp-for="LastName">Last Name</label>
    <span class="app-control__error" asp-validation-for="LastName"></span>
  </div>

  <div class="app-user__buttons app-form__buttons">
    <button class="app-user__ok app-form__button" type="submit"><span>Ok</span></button>
    <a class="app-user__cancel app-form__button" href="@Model.ReturnUrl"><span>Cancel</span></a>
  </div>

</form>
