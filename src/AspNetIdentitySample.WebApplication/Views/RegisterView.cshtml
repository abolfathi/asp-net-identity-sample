@model AspNetIdentitySample.WebApplication.ViewModels.RegisterUserViewModel

<form class="app-user app-form" method="post">

  <div class="app-form__group app-control">
    <input class="app-control__field" asp-for="Email" type="text" placeholder="Email" />
    <label class="app-control__label" asp-for="Email">Email</label>
    <span class="app-control__error" asp-validation-for="Email"></span>
  </div>

  <div class="app-form__group app-control">
    <input class="app-control__field" asp-for="Name" type="text" placeholder="Name" />
    <label class="app-control__label" asp-for="Name">Name</label>
    <span class="app-control__error" asp-validation-for="Name"></span>
  </div>

  <div class="app-form__group app-control">
    <input class="app-control__field" asp-for="Password" type="text" placeholder="Password" />
    <label class="app-control__label" asp-for="Password">Password</label>
    <span class="app-control__error" asp-validation-for="Password"></span>
  </div>

  <div class="app-form__group app-control">
    <input class="app-control__field" asp-for="RepeatedPassowrd" type="text" placeholder="Confirm Passowrd" />
    <label class="app-control__label" asp-for="RepeatedPassowrd">Confirm Passowrd</label>
    <span class="app-control__error" asp-validation-for="RepeatedPassowrd"></span>
  </div>

  <div class="app-user__buttons app-form__buttons">
    <button class="app-user__ok app-form__button" type="submit"><span>Ok</span></button>
    <a class="app-user__cancel app-form__button" href="@Model.ReturnUrl"><span>Cancel</span></a>
  </div>

</form>
